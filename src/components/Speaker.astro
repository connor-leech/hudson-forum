---
import type { Speaker } from "../meta/speakers";

interface Props {
  speaker: Speaker;
}

const { speaker } = Astro.props;
---

<div>
  <img class="photo" style={{ objectPosition: speaker.photoPosition }} src={speaker.photo} />
  <div class="name">{speaker.name}</div>
  <p class="desc" set:html={speaker.desc} />
</div>

<style>
  .photo {
    width: calc(75% - 0.5rem);
    object-fit: cover;
    aspect-ratio: 1 / 1;
  }

  .name, .desc {
    font-size: 1rem;;
    line-height: 1.5rem;
  }

  .name {
    margin-top: 2rem;
    font-weight: 600;
  }

  .desc {
    font-weight: 400;
  }

  @media(min-width: 42rem) {
    .name {
      margin-bottom: 2rem;
    }
  }
</style>
